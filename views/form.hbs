<form class="form" method="post">
  <label for="name">Name :</label>
  <input id="name" type="text" name="name" placeholder="Enter your name">
  <div class="radios">
    <label><input type="radio" class="lang" name="lang" value="IsiXhosa">IsiXhosa</label>
    <label><input type="radio" class="lang" name="lang" value="English">English</label>
    <label><input type="radio" class="lang" name="lang" value="SeSotho">SeSotho</label>
  </div>
  <button id="btn" type="submit" name="button" value="submit">Greet Me</button>
</form>
<div class="record">
  <div class="current">
    <p>We've greeted</p>
    <h1 id="num">{{count}}</h1>
    <p>Awesome People!</p>
  </div>
  <a href="/greeted"><button class="recBtn" type="submit" name="allUsers">View All Users</button></a>
  <a href="/deleteAll" class="deleteAll"><button class="recBtn" type="submit" name="deleteAll">Delete All users</button></a>
</div>
<div id="msg">
{{{msg}}}
</div>
{{{deleteAnim}}}
